<!--pages/cart/cart.wxml-->

<view class="page content-scroll">
  <!-- 空购物车 -->
  <view class="flex-center" wx:if="{{cartEmpty}}">
    <view class="text-center">
      <image class="img-mid" src="../../images/cart-empty.png"></image>
      <view class="mb-10">购物车是空的</view>
      <button class="zan-btn zan-btn--small zan-btn--primary zan-btn--plain" bindtap="switchTabIndex">去逛逛</button>
    </view>
  </view>

  <!-- 购物车 -->
  <view class="weui-panel weui-panel_access" wx:else>
    <navigator class="weui-cells weui-cells_after-title fs-14" url="../addressEdit/addressEdit">
      <view class="weui-cell weui-cell_access">
        <view class="weui-cell__hd">
          <image class="inline-block pr-10 icon-small" src="../../images/icon/icon-check.png"></image>
        </view>
        <view class="weui-cell__bd">商家名称</view>
        <view class="weui-cell__ft">完成</view>
      </view>
    </navigator>

    <view class="weui-panel__bd bg-gray mb-10" wx:for="{{[1,2]}}">
      <view class="cart-item-check">
        <image class="icon-small" src="../../images/icon/icon-check.png"></image>
      </view>
      <view class="zan-card pr-15">
        <view class="zan-card__thumb">
          <image class="zan-card__img" src="../../images/test.png" mode="aspectFit"></image>
        </view>
        <view class="zan-card__detail">
          <view class="zan-card__detail-row">
            <view class="zan-card__right-col zan-c-red">
              <view class="inline">
                ¥ 10/<text class="inline fs-11">斤</text>
              </view>
            </view>
            <view class="zan-card__left-col zan-ellipsis--l2">特级燕麦</view>
          </view>

          <view class="zan-card__detail-row zan-c-gray-darker">
            <view class="zan-card__right-col">x2</view>
            <view class="zan-card__left-col zan-ellipsis--l2">
              备注：我要好的
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>